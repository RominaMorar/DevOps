#!/bin/bash

while [[ $# -gt 0 ]]; do
    key="$1"

    case $key in
        -p|--path)
        path="$2"
        shift
        shift
        ;;
        -s|--string)
        search_string="$2"
        shift
        shift
        ;;
        *)
        echo "Unknown option: $1"
        exit 1
        ;;
    esac
done

if [ -z "$path" ] || [ -z "$search_string" ]; then
    echo "Usage: $0 -p|--path <directory> -s|--string <search_string>"
    exit 1
fi

if [ ! -d "$path" ]; then
    echo "Error: The specified path '$path' is not a directory."
    exit 1
fi

result=$(grep -rl "$search_string" "$path" 2>/dev/null)

if [ -n "$result" ]; then
    echo "Files containing '$search_string':"
    echo "$result"
else
    echo "No files found containing '$search_string' in the specified directory."
fi
